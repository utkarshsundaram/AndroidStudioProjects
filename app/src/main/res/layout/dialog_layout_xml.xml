<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
  android:layout_height="match_parent"
    android:background="#99000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_passcode">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:id="@+id/imageViewCloseId"
            android:src="@drawable/cross_icon"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewDialogMessage"
            android:text="The Code has been Sent to your registered email id. Please enter the code ot Proceed"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_below="@id/imageViewCloseId"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/textviewPlain"
            android:layout_below="@id/textviewDialogMessage"
            android:background="@color/white"
            android:layout_margin="10dp"
            />
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_margin="10dp"
            android:layout_below="@id/textviewPlain"
            android:orientation="horizontal"
            android:weightSum="10">
            <EditText
                android:id="@+id/editTextOTP"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:gravity="center_vertical"
                android:hint="Enter Code"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:background="@drawable/dialog_border_xml"
                android:singleLine="true"
                android:layout_weight="8" />
            <Button
                android:id="@+id/buttonOk"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:text="ok"
                android:layout_gravity="bottom"
                android:gravity="center"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
